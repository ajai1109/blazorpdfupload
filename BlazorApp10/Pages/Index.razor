@page "/"
@using System.IO;
@using System.Diagnostics;

<h1>Hello, world!</h1>

<div style="background-color:gray; border:solid">
    <embed style="width: 1000px; height: 750px;" src="@base64PDF" type="application/pdf" />
</div>


@code{
    string base64PDF;
    protected override async Task OnInitializedAsync()
    {
        Byte[] bytes = File.ReadAllBytes(@"c:\small.pdf");
        base64PDF = Convert.ToBase64String(bytes, 0, bytes.Length);
        base64PDF = "data:application/pdf;base64," + base64PDF;
    }
}